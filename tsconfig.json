{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "app/types/**/*"
  ],
  "compilerOptions": {
    // allowJs allows .mdx files to use the import paths defined in tsconfig
    "allowJs": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": [
      "node",
      "vite/client",
      "mdx",
      "./app/types/web-components",
      "./app/utilities/vite-plugin-image-metadata"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "mdx": {
    // Enable strict type checking in MDX files.
    "checkMdx": true
  }
}
